<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ordereasy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OrderEasy">
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/network_security_config" />

        <activity
            android:name=".CardActivity"
            android:label="@string/title_activity_card"
            android:screenOrientation="locked"
            android:theme="@style/Theme.OrderEasy.NoActionBar" />
        <activity android:name=".Ticket"
            android:screenOrientation="locked"
            android:theme="@style/Theme.Pcarga"
            />
        <activity
            android:name=".Sesion"
            android:screenOrientation="locked"
            android:theme="@style/Theme.Pcarga" />
        <activity
            android:name=".Menu"
            android:screenOrientation="locked"
            android:theme="@style/Theme.Pcarga" />
        <activity
            android:name=".Bienvenida"
            android:screenOrientation="locked"
            android:theme="@style/Theme.Pcarga" />
        <activity
            android:name=".Registro"
            android:screenOrientation="locked"
            android:theme="@style/Theme.Pcarga" />
        <activity
            android:name=".PantallaInicio"
            android:screenOrientation="locked"
            android:theme="@style/Theme.Pcarga" />
        <activity
            android:name=".PantallaCarga"
            android:screenOrientation="locked"
            android:theme="@style/Theme.Pcarga">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CaptureActivityPortrait"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>