<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OrderEasy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/order_easy</item>
        <item name="colorPrimaryVariant">@color/order_easy</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/order_easy</item>
        <item name="colorSecondaryVariant">@color/order_easy</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


    </style>

    <style name="Widget.Carga" parent="Widget.AppCompat.ProgressBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/order_easy</item>
        <item name="colorPrimaryVariant">@color/order_easy</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/order_easy</item>
        <item name="colorSecondaryVariant">@color/order_easy</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/order_easy</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/order_easy</item>

    </style>

    <style name="Theme.Pcarga" parent="Theme.AppCompat.DayNight.NoActionBar">


    </style>

    <style name="Theme.OrderEasy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.OrderEasy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OrderEasy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>